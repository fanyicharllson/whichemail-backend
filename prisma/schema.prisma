generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id        String     @id @default(cuid())
  name      String     @unique
  slug      String     @unique
  software  Software[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Software {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String   @db.Text
  version     String?
  platform    String[] // ["Windows", "Mac", "Linux"]
  price       Float    @default(0) // 0 for free
  imageUrl    String
  downloadUrl String
  featured    Boolean  @default(false)
  
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  webUrl      String?   // Optional web URL
  tags        String[]  // Optional tags array  
  repoUrl     String?   // Optional repository URL
  
  @@index([categoryId])
  @@index([slug])
}